{
  "name": "boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\" --ignore-path .gitignore",
    "db:migrate": "ts-node --project tsconfig.ts-node.json src/lib/migrate.ts",
    "db:backup": "pg_dump --inserts --no-owner --no-privileges --dbname=\"$POSTGRES_URL\" > src/lib/backup/backup.sql",
    "db:restore": "psql \"$POSTGRES_URL\" -f src/lib/backup/*.sql",
    "db:start": "npm run db:export-schema && npm run db:migrate && npm run db:restore && echo 'Banco de dados pronto! Agora execute npm run dev ou npm run build.'",
    "db:export-schema": "pg_dump --schema-only --no-owner --no-privileges --dbname=\"$POSTGRES_URL\" > src/lib/backup/schema.sql",
    "backup:auto": "ts-node src/lib/backup/backup.ts",
    "set-admin": "ts-node --project tsconfig.ts-node.json scripts/set-admin.ts"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@react-email/components": "^0.1.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "framer-motion": "^12.18.1",
    "jose": "^6.0.11",
    "lucide-react": "^0.517.0",
    "next": "15.2.4",
    "next-themes": "^0.4.6",
    "ogl": "^1.0.0",
    "pg": "^8.16.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-imask": "^7.6.1",
    "react-top-loading-bar": "^3.0.2",
    "resend": "^4.6.0",
    "sonner": "^2.0.5",
    "swr": "^2.3.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.10",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^20",
    "@types/pg": "^8.15.4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9.29.0",
    "eslint-config-next": "^15.3.4",
    "mini-css-extract-plugin": "^2.9.2",
    "prettier": "^3.5.3",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5"
  }
}
